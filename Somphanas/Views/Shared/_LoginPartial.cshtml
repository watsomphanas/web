@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
 
@if (SignInManager.IsSignedIn(User))
{
  <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav navbar-right">
      <li>
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">สวัสดี @UserManager.GetUserName(User)!</a>
      </li>
      <li>
        <button type="submit" class="btn btn-link navbar-btn navbar-link">ออกจากระบบ</button>
      </li>
    </ul>
  </form>
}
else
{
  <ul class="nav navbar-nav navbar-right">
    <li><a asp-area="Identity" asp-page="/Account/Register">@Html.Raw(s)</a></li>
    <li><a asp-area="Identity" asp-page="/Account/Login">เข้าสู่ระบบ</a></li>
  </ul>
}